{
    "id": "{{ char.id}}",
    "name": "{{ char.name }}",
    "race": "{{ char.race }}",
    "description": "{{ char.description }}",
    "occupation": "{{ char.occupation }}",
    "goodKarma": "{{ char.goodKarma }}",
    "reputaion": "{{ char.reputation }}",
    "type": "{{ (char.type == 1) ? 'SC' : 'NSC' }}",
    "images": [
        "images/gem-02.gif",
        "images/gem-05.gif",
        "images/gem-09.gif"
    ],
    "magical": "{{ (char.magicalCapability is not null)?  char.magicalCapability.name: null}}",
    "tradition": "{{ (char.magicalTradition is not null)?  char.magicalTradition.name: null}}",
    "totem": "{{ (char.totem is not null)?  char.totem.name: null}}",
    "attributes": [
        {% for att in char.attributes %}
        {
            "name": "{{ att.attribute.name }}",
            "level": "{{ att.level}}"
        }
        {% if not loop.last %},
        {% endif %}
        {% endfor %}
    ],
    "skills": [
        {% for skill in char.skills %}
        {
            "name": "{{ skill.skill.name }}",
            "type": "{{ skill.skill.typeName }}",
            "level": "{{ skill.level}}"
            {% if skill.specializations is not empty %},
            "specializations": [
                {% for spec in skill.specializations %}
                {
                    "name": "{{ spec.name }}",
                    "level": "{{ spec.level }}"
                }
                {% if not loop.last %},
                {% endif %}
                {% endfor %}
            ]
            {% endif %}
        }
        {% if not loop.last %},
        {% endif %}
        {% endfor %}
    ],
    "connectionsID": [
        {% for conn in char.connectionsInDB%}
        {
            "id": "{{ conn.character.id }}",
            "name": "{{ conn.target.name }}",
            "level": "{{ conn.level }}"
        }
        {% if not loop.last %},
        {% endif %}
        {% endfor %}
    ],
    "connectionsNID": [
        {% for conn in char.connectionsNotInDB%}
        {
            "name": "{{ conn.target }}",
            "level": "{{ conn.level }}"
        }
        {% if not loop.last %},
        {% endif %}
        {% endfor %}
    ],
    "equip": [
        {% for item in char.items%}
        {
            "name": "{{ item.name }}",
            "amount": "{{ item.amount }}"
        }
        {% if not loop.last %},
        {% endif %}
        {% endfor %}
    ],
    "user": {
        "name": "{{ char.user.username }}",
        "id": "{{ char.user.id }}"
    }
}