<div class="sidebar sidebar-left">
    <div class="scrollable">
        <h1 class="scrollable-header app-name">SR Character DB</h1>
        <div class="scrollable-content">
            <div class="list-group" ui-turn-off='uiSidebarLeft'>
                
                <a class="list-group-item" href="{{ path('character_database_homepage') }}#/new">Neuer Character<i
                            class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="{{ path('character_database_homepage') }}#/character/user/{{ app.user.id }}">Meine Character<i
                            class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="{{ path('character_database_homepage') }}#/character/user/">Alle Character<i class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="{{ path('character_database_homepage') }}#/skills">Skills<i class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="{{ path('character_database_homepage') }}#/specs">Spezialisierungen<i
                            class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="{{ path('character_database_homepage') }}#/attributes">Attribute<i
                            class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="{{ path('character_database_homepage') }}#/traditions">Traditionen<i class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="{{ path('character_database_homepage') }}#/totems">Totems<i class="fa fa-chevron-right pull-right"></i></a>
                <a class="list-group-item" href="{{ path('character_database_homepage') }}#/cyberware">Cyberware<i
                            class="fa fa-chevron-right pull-right"></i></a>
                {% if app.user %}
                    <a class="list-group-item" href="{{ path('fos_user_security_logout') }}">Logout<i
                                class="fa fa-chevron-right pull-right"></i></a>
                {% else %}
                    <a class="list-group-item" href="{{ path('fos_user_security_login') }}">Login<i
                                class="fa fa-chevron-right pull-right"></i></a>
                {% endif %}

            </div>
        </div>
    </div>
</div>
<div class="sidebar sidebar-right">
    <div class="list-group text-right" ui-turn-off='uiSidebarRight'>
        <a class="list-group-item" href="{{ path('fos_user_security_login') }}">
            <i class="fa fa-chevron-left pull-left"></i>Login</a>
        <a class="list-group-item" href="{{ path('fos_user_registration_register') }}">
            <i class="fa fa-chevron-left pull-left"></i>Registrieren</a>
    </div>
</div>